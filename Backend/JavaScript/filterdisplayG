const functions = require("firebase-functions");
const admin = require("firebase-admin");
exports.Function = functions
    .region("asia-northeast1")
    .database.ref("tickets/G/serve")
    .onWrite((change, context) => {
      const itemsRef = admin.database().ref("tickets/G/serve");
      const filteredItemsRef = admin.database().ref("tickets/G/display");
      return itemsRef.orderByChild("serveable")
          .equalTo(true)
          .once("value")
          .then((snapshot) => {
            const filteredData = snapshot.val();
            return filteredItemsRef.set(filteredData);
          })
          .catch((error) => console.log(error));
    });